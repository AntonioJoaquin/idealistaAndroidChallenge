<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >

    <data>

        <variable
            name="adapter"
            type="com.idealista.android.challenge.list.ui.ads.multimedias.ImageSliderAdapter" />

        <variable
            name="viewModel"
            type="com.idealista.android.challenge.list.ui.ads.AdsViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:fillViewport="true"
        android:focusable="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey10"
            tools:context=".ui.ads.AdsActivity">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineMultimedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.35" />

            <include
                android:id="@+id/viewMultimedia"
                android:layout_width="0dp"
                android:layout_height="0dp"
                layout="@layout/view_multimedia"
                app:adapter="@{adapter}"
                app:viewModel="@{viewModel}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/guidelineMultimedia"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewAdTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/guidelineMultimedia"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@{viewModel.ad.title}"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                tools:text="Ad Title"/>

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/textViewAdTitle"
                app:layout_constraintBottom_toTopOf="@id/textViewAdDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@{viewModel.ad.price}"
                android:textSize="20sp"
                android:textColor="@color/black"
                tools:text="600â‚¬" />

            <TextView
                android:id="@+id/textViewAdDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:text="@{viewModel.ad.propertyComment}"
                android:textColor="@color/black"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@id/textViewPrice"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/textViewSeeAllDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="16dp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                app:setExpandTextVisibility="@{viewModel.ad.propertyComment}"
                app:layout_constraintTop_toBottomOf="@id/textViewAdDescription"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="@string/ads_show_all_description"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>