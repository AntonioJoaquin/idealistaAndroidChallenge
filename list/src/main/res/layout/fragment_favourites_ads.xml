<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.idealista.android.challenge.list.ui.main.favoriteslist.FavouritesAdsViewModel" />

        <variable
            name="adapter"
            type="com.idealista.android.challenge.list.ui.common.listAdapter.AdListAdapter" />

        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.favoriteslist.FavouritesAdsFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewAds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:bindAdapter="@{adapter}"
            app:setItems="@{viewModel.ads}"
            app:visibilityState="@{viewModel.loadingState}"
            app:showWhenLoading="@{false}"
            android:scrollbars="vertical"
            android:background="@color/grey10"
            tools:context=".ui.main.list.ListFragment" />

        <androidx.core.widget.ContentLoadingProgressBar
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.ProgressBar"
            style="@style/Widget.AppCompat.ProgressBar"
            app:visibilityState="@{viewModel.loadingState}"
            app:showWhenLoading="@{true}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>