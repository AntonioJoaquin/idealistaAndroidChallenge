<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ad"
            type="com.idealista.android.challenge.list.ui.list.model.AdModel" />

        <variable
            name="listener"
            type="com.idealista.android.challenge.list.ui.favoriteslist.adapter.AdItemListListener" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:background="?selectableItemBackground"
        android:onClick="@{() -> listener.onClick(ad)}">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewAd"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:setPath="@{ad.thumbnail}"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="9dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@{ad.title}"
                android:textColor="@color/black"
                android:textSize="18sp"
                app:layout_constraintTop_toBottomOf="@id/imageViewAd"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Piso en alquiler" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingHorizontal="8dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@{ad.price}"
                android:textColor="@color/black"
                android:textSize="23sp"
                app:layout_constraintTop_toBottomOf="@id/textViewTitle"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="450â‚¬" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>